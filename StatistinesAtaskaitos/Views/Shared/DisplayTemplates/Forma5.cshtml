@using MvcContrib.UI.Grid
@model IEnumerable<StatistinesAtaskaitos.Models.Forma5>
<table class="ataskaita">
    <tr>
        <th rowspan="3">Produkcijos pavadinimas</th>
        <th rowspan="3">Kodas</th>
        <th rowspan="3">Plotas, ha</th>
        <th rowspan="3">Produkcijos kiekis, t</th>
        <th rowspan="3">Derlingumas iš 1ha 100kg</th>
        <th colspan="8">Išlaidos, tūkst. Lt</th>
        <th rowspan="3">Produkcijos vieneto savikaina, Lt</th>
    </tr>
    <tr>
        <th rowspan="2">darbo apmokėjimas su atsiskaitymais valstyb. soc. ir sveikatos draudimui</th>
        <th rowspan="2">sėklos ir sodinamoji medžiaga</th>
        <th rowspan="2">trąšos ir dirvos pagerinimo medžiagos</th>
        <th rowspan="2">naftos produktai ir dujos</th>
        <th rowspan="2">elektros energija</th>
        <th rowspan="2">kitos išlaidos</th>
        <th rowspan="2">iš viso išlaidų</th>
        <th>iš jų</th>
    </tr>
    <tr>
        <th>išlaidos pagrindinei produkcijai</th>
    </tr>
    <tr>
        <th>A</th>
        <th>B</th>
        <th>1</th>
        <th>2</th>
        <th>3</th>
        <th>4</th>
        <th>5</th>
        <th>6</th>
        <th>7</th>
        <th>8</th>
        <th>9</th>
        <th>10</th>
        <th>11</th>
        <th>12</th>
    </tr>
    @foreach (var imones5 in Model)
    {
        <tr>
            <th>@imones5.Pavadinimas</th>
            <th>@imones5.Kodas</th>
            <td class="@(imones5.Klaidos[1].Any() ? "evil" : "")"  data-error-messages="@(string.Join(";", imones5.Klaidos[1].Select(x => x.KlaidosPranesimas)))">@imones5.Plotas.ToString("0.00")</td>
            <td class="@(imones5.Klaidos[2].Any() ? "evil" : "")"  data-error-messages="@(string.Join(";", imones5.Klaidos[2].Select(x => x.KlaidosPranesimas)))">@imones5.ProdukcijosKiekis.ToString("0.00")</td>
            <td class="@(imones5.Klaidos[3].Any() ? "evil" : "")"  data-error-messages="@(string.Join(";", imones5.Klaidos[3].Select(x => x.KlaidosPranesimas)))">@imones5.Derlingumas.ToString("0.00")</td>
            <td class="@(imones5.Klaidos[4].Any() ? "evil" : "")"  data-error-messages="@(string.Join(";", imones5.Klaidos[4].Select(x => x.KlaidosPranesimas)))">@imones5.IslaidosDarboApmokejimas.ToString("0.00")</td>
            <td class="@(imones5.Klaidos[5].Any() ? "evil" : "")"  data-error-messages="@(string.Join(";", imones5.Klaidos[5].Select(x => x.KlaidosPranesimas)))">@imones5.IslaidosSeklos.ToString("0.00")</td>
            <td class="@(imones5.Klaidos[6].Any() ? "evil" : "")"  data-error-messages="@(string.Join(";", imones5.Klaidos[6].Select(x => x.KlaidosPranesimas)))">@imones5.IslaidosTrasos.ToString("0.00")</td>
            <td class="@(imones5.Klaidos[7].Any() ? "evil" : "")"  data-error-messages="@(string.Join(";", imones5.Klaidos[7].Select(x => x.KlaidosPranesimas)))">@imones5.IslaidosNafta.ToString("0.00")</td>
            <td class="@(imones5.Klaidos[8].Any() ? "evil" : "")"  data-error-messages="@(string.Join(";", imones5.Klaidos[8].Select(x => x.KlaidosPranesimas)))">@imones5.IslaidosElektra.ToString("0.00")</td>
            <td class="@(imones5.Klaidos[9].Any() ? "evil" : "")"  data-error-messages="@(string.Join(";", imones5.Klaidos[9].Select(x => x.KlaidosPranesimas)))">@imones5.IslaidosKitos.ToString("0.00")</td>
            <td class="@(imones5.Klaidos[10].Any() ? "evil" : "")"  data-error-messages="@(string.Join(";", imones5.Klaidos[10].Select(x => x.KlaidosPranesimas)))">@imones5.IslaidosVisos.ToString("0.00")</td>
            <td class="@(imones5.Klaidos[11].Any() ? "evil" : "")"  data-error-messages="@(string.Join(";", imones5.Klaidos[11].Select(x => x.KlaidosPranesimas)))">@imones5.IslaidosPagrindinei.ToString("0.00")</td>
            <td class="@(imones5.Klaidos[12].Any() ? "evil" : "")"  data-error-messages="@(string.Join(";", imones5.Klaidos[12].Select(x => x.KlaidosPranesimas)))">@imones5.ProdukcijosSavikaina.ToString("0.00")</td>


        </tr>       
    }
</table>
